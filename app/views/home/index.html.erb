<h1>Brand New Flag</h1>

<%= form_for @photo do |f| %>
  <div class="form-group">
    <%= f.label :creator_email, class: "sr-only" %>
    <%= f.email_field :creator_email, placeholder: "Email Address" %>
  </div>

  <div class="form-group">
    <%= f.label :image, class: "sr-only" %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "Create Profile Photo" %>
<% end %>

<% @photos.each do |photo| %>
  <%= image_tag photo.image.square.url %>
<% end %>