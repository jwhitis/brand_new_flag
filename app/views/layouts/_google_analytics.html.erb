<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', '<%= AppConfig["google_analytics_id"] %>', 'auto');
  ga('send', 'pageview');

  $(document).on("ready page:load", function() {

    $("div#share a").click(function() {
      var label = $(this).prev("img.video-thumbnail").data("title");
      ga("send", "event", "Social", "Shared video to Twitter", label);
    });

    $("div.social-links a").click(function() {
      var service = $(this).attr("class");
      var action = "Shared video to " + service.charAt(0).toUpperCase() + service.slice(1);
      var label = $(this).parent().prev("div.video-title").text();
      ga("send", "event", "Social", action, label);
    });

    $("div#social a").click(function() {
      var label = $(this).data("label");
      ga("send", "event", "Social", "Clicked social link", label);
    });

    // Vimeo player tracking
    $(function() {
      var player = $("iframe#video-player");
      var playerOrigin = "*";

      if (window.addEventListener) {
        window.addEventListener("message", onMessageReceived, false);
      } else {
        window.attachEvent("onmessage", onMessageReceived, false);
      }

      function onMessageReceived(event) {
        if (!(/^https?:\/\/player.vimeo.com/).test(event.origin)) {
          return false;
        }

        if (playerOrigin === "*") {
          playerOrigin = event.origin;
        }

        var data = JSON.parse(event.data);
        var label = player.data("current-video");

        switch (data.event) {
          case "ready":
            post("addEventListener", "play");
            post("addEventListener", "finish");
            break;
          case "play":
            ga("send", "event", "Media", "Played video", label);
            break;
          case "finish":
            ga("send", "event", "Media", "Completed video", label);
            break;
        }
      }

      function post(action, value) {
        var data = {
          method: action
        };

        if (value) {
          data.value = value;
        }

        var message = JSON.stringify(data);
        player[0].contentWindow.postMessage(message, playerOrigin);
      }
    });
  });
</script>